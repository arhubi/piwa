{
  "name": "piwa",
  "version": "1.0.0-beta.5",
  "description": "A simple promise wrapper",
  "main": "./dist",
  "types": "./dist/index.d.ts",
  "author": "Arthur BriÃ¨re (arhubi)",
  "license": "MIT",
  "keywords": [
    "promise",
    "wrapper",
    "async",
    "await",
    "async await"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "playground": "node --loader ts-node/esm ./playground/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "release": "zx scripts/release.mjs",
    "test": "ava"
  },
  "homepage": "https://github.com/arhubi/piwa",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/arhubi/piwa.git"
  },
  "engines": {
    "node": ">=14.19.0 || >=16.15.0"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@types/node": "^18.11.18",
    "ava": "^5.1.0",
    "kolorist": "^1.6.0",
    "semver": "^7.3.8",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "typescript": "^4.9.3",
    "zx": "^7.1.1"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  }
}
